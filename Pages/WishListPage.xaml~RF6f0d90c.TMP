<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppEasyCart.Pages.WishListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Lista de Deseos">
    <CollectionView ItemsSource="{Binding WishList}">
        <CollectionView.EmptyView>
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="No hay productos en la lista de deseos"
                VerticalOptions="Center" />
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Border
                    Margin="10,5"
                    Padding="10"
                    HeightRequest="110"
                    StrokeShape="RoundRectangle 8,8,8,8"
                    StrokeThickness="0.7">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <Image
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Aspect="AspectFit"
                            HeightRequest="70"
                            Source="{Binding Product.Foto}"
                            WidthRequest="70" />

                        <Grid
                            Grid.Column="1"
                            RowDefinitions="Auto,*"
                            VerticalOptions="FillAndExpand">
                            <Label
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Margin="0,5,0,0"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalTextAlignment="Start"
                                Text="{Binding Product.Nombre}" />

                            <Grid
                                Grid.Row="1"
                                Margin="0,0,0,5"
                                ColumnDefinitions="*,Auto"
                                VerticalOptions="End">
                                <Label
                                    Grid.Column="0"
                                    FontSize="18"
                                    HorizontalTextAlignment="Start"
                                    Text="{Binding Product.Precio, StringFormat='{0:F2}â‚¬'}"
                                    VerticalTextAlignment="End" />
                                <ImageButton
                                    Grid.Column="1"
                                    Command="{Binding AgregarProductoCommand}"
                                    CommandParameter="{Binding Product}"
                                    HeightRequest="30"
                                    Source="add_shopping_cart.png"
                                    VerticalOptions="End"
                                    WidthRequest="30" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>